<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/movie_title_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:minHeight="48dp"
            tools:text="Movie Title" />

        <EditText
            android:id="@+id/movie_description_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:minHeight="48dp"
            tools:text="Movie Description" />

        <EditText
            android:id="@+id/movie_release_year_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Release Year"
            android:inputType="number"
            android:minHeight="48dp"
            tools:text="2022" />

        <EditText
            android:id="@+id/movie_length_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Length (minutes)"
            android:inputType="number"
            android:minHeight="48dp"
            tools:text="120" />

        <EditText
            android:id="@+id/movie_rating_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rating"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            tools:text="8.5" />

        <EditText
            android:id="@+id/movie_votes_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Votes"
            android:inputType="number"
            android:minHeight="48dp"
            tools:text="1000" />

        <EditText
            android:id="@+id/movie_revenue_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Revenue"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            tools:text="1000000" />

        <EditText
            android:id="@+id/movie_director_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Director"
            android:minHeight="48dp"
            tools:text="Director Name" />

        <Spinner
            android:id="@+id/movie_genres_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp" />
        <!-- android:prompt="@string/genre_prompt" -->

        <Spinner
            android:id="@+id/movie_actors_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp" />
        <!-- android:prompt="@string/genre_prompt" -->

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Save" />

    </LinearLayout>
</ScrollView>
